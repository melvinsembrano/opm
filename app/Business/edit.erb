<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @business.name %></h1>
    <a href="<%= url_for :action => :show, :id => @business.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @business.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @business.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="business[name]" class="fieldLabel">Name</label>
            <input type="text" id="business[name]" name="business[name]" value="<%= @business.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="business[description]" class="fieldLabel">Description</label>
            <input type="text" id="business[description]" name="business[description]" value="<%= @business.description %>" <%= placeholder( "Description" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="business[lat]" class="fieldLabel">Lat</label>
            <input type="text" id="business[lat]" name="business[lat]" value="<%= @business.lat %>" <%= placeholder( "Lat" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="business[lng]" class="fieldLabel">Lng</label>
            <input type="text" id="business[lng]" name="business[lng]" value="<%= @business.lng %>" <%= placeholder( "Lng" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="business[url]" class="fieldLabel">Url</label>
            <input type="text" id="business[url]" name="business[url]" value="<%= @business.url %>" <%= placeholder( "Url" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
