<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @business.object %>
    <h1>Edit <%= @business.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @business.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @business.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="business[name]" value="<%= @business.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Description: </td>
              <td class="itemValue"><input type="text" name="business[description]" value="<%= @business.description %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Lat: </td>
              <td class="itemValue"><input type="text" name="business[lat]" value="<%= @business.lat %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Lng: </td>
              <td class="itemValue"><input type="text" name="business[lng]" value="<%= @business.lng %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Url: </td>
              <td class="itemValue"><input type="text" name="business[url]" value="<%= @business.url %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
