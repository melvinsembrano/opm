<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @setup.name %></h1>
    <a href="<%= url_for :action => :show, :id => @setup.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @setup.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @setup.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="setup[name]" class="fieldLabel">Name</label>
            <input type="text" id="setup[name]" name="setup[name]" value="<%= @setup.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="setup[value]" class="fieldLabel">Value</label>
            <input type="text" id="setup[value]" name="setup[value]" value="<%= @setup.value %>" <%= placeholder( "Value" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
