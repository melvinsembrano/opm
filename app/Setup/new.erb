<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @setup.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @setup.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="setup[name]" class="fieldLabel">Name</label>
            <input type="text" id="setup[name]" name="setup[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="setup[value]" class="fieldLabel">Value</label>
            <input type="text" id="setup[value]" name="setup[value]" <%= placeholder("Value") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
